/* 页面整体样式 */
.container {
  display: flex;
  flex-direction: column;
  background-color: #f0fffd;
  min-height: 100vh;
  padding: 100rpx 20rpx;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-bottom: 60rpx;
  position: relative;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 30rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 700;
  color: #222;
}

/* 消息列表容器 */
.message-list {
  width: 100%;
}

/* 单个患者消息项：横向布局，模拟微信会话列表 */
.patient-message-item {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 25rpx 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 患者头像 */
.patient-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.patient-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 消息信息区：占满剩余空间 */
.message-info {
  flex: 1;
  overflow: hidden; /* 防止长文本溢出 */
}

/* 消息顶部：姓名+时间 */
.message-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.patient-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  white-space: nowrap; /* 姓名不换行 */
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

/* 消息内容：长文本省略 */
.message-content {
  font-size: 30rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; /* 超出部分显示省略号 */
}

/* 喇叭图标：播放语音 */
.speaker-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
