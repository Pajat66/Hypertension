<view class="container">
  <text style="width:260px;height:100px;display:block;margin:0 auto 18px auto;"></text>
  <view class="name-row">
    <button class="logout-chip" bindtap="handleLogoutTap" hover-class="logout-chip--hover">退出</button>
  </view>
  <view class="name">你好,{{displayName || '姓名'}}</view>
  <!-- 统计项改为居中布局 -->
  <view class="stats">
    <view class="stat-item">
      <view class="stat-label">管辖患者数</view>
      <view class="stat-value">{{patientCount}}</view>
    </view>
    <view class="stat-item">
      <view class="stat-label">今日未录血压数</view>
      <view class="stat-value red">{{todayNoBpCount}}</view>
    </view>
  </view>
  <!-- 放大后的按钮 -->
  <view class="btn" bindtap="gotoPatientManage">
    <image class="speaker-icon" src="../../images/icon/喇叭.png" mode="widthFix" />
    <view class="btn-text">患者管理</view>
  </view>
  <view class="btn" bindtap="gotoPatientMessage">
    <image class="speaker-icon" src="../../images/icon/喇叭.png" mode="widthFix" />
    <view class="btn-text">患者消息</view>
  </view>
  <view class="btn" bindtap="gotoBatchRemind">
    <image class="speaker-icon" src="../../images/icon/喇叭.png" mode="widthFix" />
    <view class="btn-text">批量提醒</view>
  </view>
</view>
