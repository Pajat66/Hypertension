/* 血压录入页面样式 */

/* 图标黑色圆形边框样式 */
.icon-with-border-horn {
  border: 2px solid #000;
  border-radius: 50%;
  padding: 4px;
}

.icon-with-border-mic {
  border: 3px solid #000;
  border-radius: 50%;
  padding: 6px;
  transition: all 0.3s ease;
}

.icon-with-border-mic.mic-active {
  border-color: #07c160;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

/* 顶部导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100px; 
  display: flex;
  align-items: flex-end;
  padding-bottom: 10px;
  background-color: #cdf7be;
  z-index: 1000;
}

.back-btn {
  padding: 10px;
  margin-right: 20px;
}

.back-icon {
  margin-top: 6px;
  width: 40px;
  height: 40px;
}

.nav-title {
  font-size: 24px;
  font-weight: 600;
  color: #000;
  margin: 0 60px;
  margin-bottom: 18px ;
}
.container {
  /* padding: 18px; */
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  font-size: 16px;
  color: #666;
}

/* 中央主文案区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main-text {
  font-size: 30px;
  font-weight: 700;
  color: #000;
  text-align: center;
  margin-bottom: 40px;
}

.recognized-value {
  margin-top: 30px ;
  padding: 20px 40px;
  background-color: #f0f0f0;
  border-radius: 10px;
  margin-bottom: 20px;
  min-height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-hint-container {
  min-height: 40px;
  margin-top: 10px;
  margin-bottom: 20px;
}

.status-hint {
  font-size: 24px;
  color: #999;
}

.status-hint.success {
  color: #07c160;
  font-weight: 600;
}

.status-hint.processing {
  color: #1890ff;
  font-weight: 600;
}

/* 底部操作按钮 */
.bottom-buttons {
  display: flex;
  gap: 20px;
  margin-top: 20px;
}

.retry-btn {
  flex: 1;
  height: 100px;
  line-height: 100px;
  text-align: center;
  font-size: 30px;
  font-weight: 600;
  color: rgb(0, 0, 0);
  background-color: #f08e9a;
  border: 2px solid #da848e;
  border-radius: 10px;
}

.save-btn {
  flex: 1;
  height: 100px;
  line-height: 100px;
  text-align: center;
  font-size: 30px;
  font-weight: 600;
  color: #fff;
  background-color: #07c160;
  border-radius: 10px;
}