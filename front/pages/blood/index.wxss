.container {
  background-color: #e6f7f5;
  min-height: 100vh;
  padding: 100rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  background-color: #cdf7be;
  margin-bottom: 40rpx;
  position: relative;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 30rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

.patient-name {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.chart-canvas {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 60rpx;
}

.analysis-section {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.analysis-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.analysis-input {
  width: 100%;
  min-height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.analysis-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.save-btn {
  background-color: #4285f4;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 10rpx;
  border: none;
}

.save-btn::after {
  border: none;
}