<view class="container">
  <view class="header">
    <image class="back-icon" src="../../images/icon/返回 .png" mode="widthFix" bindtap="goBack" />
    <view class="title">血压历史</view>
  </view>

  <view class="patient-name">{{patientName || '患者'}}</view>

  <canvas canvas-id="bpChart" class="chart-canvas"></canvas>

  <!-- 趋势分析输入框 -->
  <view class="analysis-section">
    <view class="analysis-title">血压趋势分析</view>
    <textarea 
      class="analysis-input" 
      placeholder="请输入对患者血压趋势的分析和建议..."
      value="{{analysisText}}"
      bindinput="onAnalysisInput"
      maxlength="500"
      show-confirm-bar="{{false}}"
    ></textarea>
    <view class="analysis-footer">
      <text class="char-count">{{analysisText.length}}/500</text>
      <button class="save-btn" bindtap="saveAnalysis">保存分析</button>
    </view>
  </view>
</view>