<view class="container">
  <!-- 顶部导航栏 -->
  <view class="navbar">
    <view class="back-btn" bindtap="onBack">
      <image src="../../images/icon/返回 .png" class="back-icon"></image>
    </view>
    <text class="nav-title">听提醒</text>
  </view>

  <!-- 主内容区域 -->
  <view class="main-content">
    <view class="time-display">
      <text class="time">{{time}}</text>
      <text class="network">{{network}}</text>
    </view>
    
    <scroll-view scroll-y class="reminder-list" enable-flex>
      <block wx:if="{{groupedReminders.length > 0}}">
        <block wx:for="{{groupedReminders}}" wx:for-item="group" wx:key="date">
          <!-- 日期标题 -->
          <view class="date-header">
            <text class="date-title">{{group.displayDate}}</text>
            <text class="date-count">({{group.reminders.length}}条)</text>
          </view>
          
          <!-- 该日期下的提醒列表 -->
          <block wx:for="{{group.reminders}}" wx:for-item="item" wx:key="id">
            <view class="reminder-card {{item.is_listened ? 'listened' : ''}}">
              <view class="reminder-header">
                <text class="doctor-name">{{item.doctor_name}}医生提醒：</text>
                <text class="reminder-time">{{item.relative_time}}</text>
              </view>
              <view class="reminder-body">
                <text class="reminder-content">{{item.content}}</text>
                <view class="play-btn {{playingId === item.id ? 'playing' : ''}}" bindtap="playReminder" data-reminder="{{item}}">
                  <image src="/images/icon/喇叭.png" class="speaker-icon" />
                </view>
              </view>
              <text class="reminder-status" wx:if="{{item.is_listened}}">已听</text>
            </view>
          </block>
        </block>
        
        <view class="loading-more" wx:if="{{loading}}">
          <view class="loading-dot"></view>
          <text>加载中...</text>
        </view>
        <view class="no-more" wx:if="{{!hasMore && !loading}}">
          <text>没有更多提醒了</text>
        </view>
      </block>
      <block wx:else>
        <view class="no-reminder" wx:if="{{!loading}}">
          <text>暂无提醒消息</text>
        </view>
      </block>
    </scroll-view>
  </view>
</view>