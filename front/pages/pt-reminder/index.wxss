/* 听提醒页面样式 */
.container {
  padding: 18px;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100px; 
  display: flex;
  align-items: flex-end;
  padding-bottom: 10px;
  background-color: #cdf7be;
  z-index: 1000;
}

.back-btn {
  padding: 10px;
  margin-right: 20px;
}

.back-icon {
  margin-top: 16px;
  width: 40px;
  height: 40px;
}

.nav-title {
  font-size: 24px;
  font-weight: 600;
  color: #000;
  margin: 0 74px;
  margin-bottom: 18px ;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  font-size: 16px;
  color: #666;
}

.icon-with-border-mic {
  border: 3px solid #000;
  border-radius: 50%;
  background-color: #cdf7be;
  padding: 6px;
}

/* 主内容区域 */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  margin-top: 120px;
}

.time-display {
  width: 100%;
  text-align: center;
  margin-bottom: 20px;
}

.time {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.network {
  font-size: 28rpx;
  color: #666;
}

.reminder-list {
  width: 100%;
  max-height: calc(100vh - 250rpx);
}

/* 日期标题 */
.date-header {
  width: 100%;
  padding: 20rpx 0 16rpx 0;
  margin-top: 20rpx;
  margin-bottom: 16rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.date-header:first-child {
  margin-top: 0;
}

.date-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.date-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.reminder-card {
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  border: 2rpx solid rgba(0,0,0,0.12);
  border-radius: 24rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.reminder-card.listened {
  background-color: #f5f5f5;
  border-color: rgba(0,0,0,0.06);
  opacity: 0.85;
}

.reminder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.doctor-name {
  font-size: 38rpx;
  font-weight: 700;
  color: #333;
}

.reminder-time {
  font-size: 28rpx;
  color: #999;
}

.reminder-body {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.reminder-content {
  flex: 1;
  font-size: 34rpx;
  color: #555;
  margin-right: 30rpx;
  line-height: 1.6;
  font-weight: 500;
}

.play-btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #cdf7be;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  flex-shrink: 0;
}

.play-btn.playing {
  background-color: #a8e690;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.9;
  }
}

.speaker-icon {
  width: 50rpx;
  height: 50rpx;
}

.reminder-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 6rpx 20rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.no-reminder {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #cdf7be;
  margin-right: 16rpx;
  animation: loading 1.4s infinite ease-in-out;
}

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}
