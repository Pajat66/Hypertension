/* 听提醒页面样式 */
.container {
  padding: 18px;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100px; 
  display: flex;
  align-items: flex-end;
  padding-bottom: 10px;
  background-color: #cdf7be;
  z-index: 1000;
}

.back-btn {
  padding: 10px;
  margin-right: 20px;
}

.back-icon {
  margin-top: 16px;
  width: 40px;
  height: 40px;
}

.nav-title {
  font-size: 24px;
  font-weight: 600;
  color: #000;
  margin: 0 74px;
  margin-bottom: 18px ;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  font-size: 16px;
  color: #666;
}

.icon-with-border-mic {
  border: 3px solid #000;
  border-radius: 50%;
  background-color: #cdf7be;
  padding: 6px;
}

/* 主内容区域 */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  margin-top: 120px;
}

.reminder-card {
  width: 100%;
  padding: 40px;
  background-color: #fff;
  border: 1px solid rgba(0,0,0,0.15);
  border-radius: 12px;
  box-sizing: border-box;
  text-align: center;
  position: relative;
}

.reminder-label {
  display: block;
  font-size: 32px;
  font-weight: 600;
  color: #000;
  margin-bottom: 20px;
}

.reminder-content {
  display: block;
  font-size: 36px;
  color: #666;
  margin-bottom: 20px;
}

.reminder-status {
  display: inline-block;
  padding: 5px 20px;
  background-color: #07c160;
  color: #fff;
  border-radius: 20px;
  font-size: 24px;
  position: absolute;
  top: 20px;
  right: 20px;
}