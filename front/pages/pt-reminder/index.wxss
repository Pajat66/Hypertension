/* 听提醒页面样式 */
.container {
  padding: 18px;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100px; 
  display: flex;
  align-items: flex-end;
  padding-bottom: 10px;
  background-color: #cdf7be;
  z-index: 1000;
}

.back-btn {
  padding: 10px;
  margin-right: 20px;
}

.back-icon {
  margin-top: 16px;
  width: 40px;
  height: 40px;
}

.nav-title {
  font-size: 24px;
  font-weight: 600;
  color: #000;
  margin: 0 74px;
  margin-bottom: 18px ;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  font-size: 16px;
  color: #666;
}

.icon-with-border-mic {
  border: 3px solid #000;
  border-radius: 50%;
  background-color: #cdf7be;
  padding: 6px;
}

/* 主内容区域 */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  margin-top: 120px;
}

.time-display {
  width: 100%;
  text-align: center;
  margin-bottom: 20px;
}

.time {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.network {
  font-size: 28rpx;
  color: #666;
}

.reminder-list {
  width: 100%;
  max-height: calc(100vh - 250rpx);
}

.reminder-card {
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
  border: 1px solid rgba(0,0,0,0.1);
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  position: relative;
}

.reminder-card.listened {
  background-color: #f8f8f8;
}

.reminder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.doctor-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.reminder-time {
  font-size: 24rpx;
  color: #999;
}

.reminder-body {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.reminder-content {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.play-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #cdf7be;
  border-radius: 50%;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.speaker-icon {
  width: 40rpx;
  height: 40rpx;
}

.reminder-status {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 4rpx 16rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.no-reminder {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

.reminder-time {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}