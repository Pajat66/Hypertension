/* 我的用药页面样式 */
.container {
  padding: 18px;
  min-height: 100vh;
  box-sizing: border-box;
}

.tip {
  text-align: center;
  font-weight: 600;
  font-size: 30px;
  margin-top: 70px;
}

/* 顶部导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100px; 
  display: flex;
  align-items: flex-end;
  padding-bottom: 10px;
  background-color: #cdf7be;
  z-index: 1000;
}

.back-btn {
  padding: 10px;
  margin-right: 20px;
}

.back-icon {
  margin-top: 6px;
  width: 40px;
  height: 40px;
}

.nav-title {
  font-size: 24px;
  font-weight: 600;
  color: #000;
  margin: 0 64px;
  margin-bottom: 18px ;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  font-size: 16px;
  color: #666;
}

/* 药品列表 */
.medication-list {
  margin-top: 20px;
}

.medication-card {
  display: flex;
  align-items: center;
  padding: 20px;
  margin-bottom: 15px;
  background-color: #f6ffca;
  border: 1px solid rgba(0,0,0,0.15);
  border-radius: 12px;
  box-sizing: border-box;
  box-shadow: inset -5px -5px 5px rgba(0, 0, 0, 0.1);
}

/* 复选框样式 */
.checkbox {
  width: 40px;
  height: 40px;
  border: 2px solid #ccc;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20px;
  flex-shrink: 0;
}

.checkbox-inner {
  width: 100%;
  height: 100%;
  background-color: #07c160;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24px;
  font-weight: bold;
}

/* 药品信息 */
.medication-info {
  flex: 1;
}

.medication-name {
  font-size: 34px;
  font-weight: 700;
  color: #000;
  display: block;
  margin-bottom: 8px;
}

.medication-detail {
  font-size: 28px;
  color: #666;
}