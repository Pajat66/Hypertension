/* 我的用药页面样式 */
.container {
  padding: 18px;
  min-height: 100vh;
  box-sizing: border-box;
}

.tip {
  text-align: center;
  font-weight: 600;
  font-size: 30px;
  margin-top: 70px;
}

/* 顶部导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100px; 
  display: flex;
  align-items: flex-end;
  padding-bottom: 10px;
  background-color: #cdf7be;
  z-index: 1000;
}

.back-btn {
  padding: 10px;
  margin-right: 20px;
}

.back-icon {
  margin-top: 6px;
  width: 40px;
  height: 40px;
}

.nav-title {
  font-size: 24px;
  font-weight: 600;
  color: #000;
  margin: 0 64px;
  margin-bottom: 18px ;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  font-size: 16px;
  color: #666;
}

/* 药品列表 */
.medication-list {
  margin-top: 20px;
}

.medication-card {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 18px;
  margin-bottom: 16px;
  background: linear-gradient(180deg, #f6ffca 0%, #ffffff 100%);
  border: 1px solid rgba(0,0,0,0.08);
  border-radius: 16px;
  box-sizing: border-box;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.06);
}

/* 复选框样式 */
.checkbox {
  width: 40px;
  height: 40px;
  border: 2px solid #ccc;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20px;
  flex-shrink: 0;
}

.checkbox-inner {
  width: 100%;
  height: 100%;
  background-color: #07c160;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24px;
  font-weight: bold;
}

/* 药品信息 */
.medication-info {
  flex: 1;
}

.medication-name {
  font-size: 32px;
  font-weight: 700;
  color: #000;
}

.medication-detail {
  font-size: 26px;
  color: #666;
}

.pill-icon {
  font-size: 30px;
}

.row-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8px;
}

.time-chip {
  background: #f0f6ff;
  color: #246bff;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

/* 空状态 */
.empty-wrap {
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
}
.empty-icon { width: 140rpx; height: 140rpx; margin-bottom: 24rpx; }
.empty-title { font-size: 50rpx; color: #333; font-weight: 700; margin-bottom: 8rpx; }
.empty-sub { font-size: 40rpx; color: #999; margin-bottom: 20rpx; }
.empty-refresh { background: #4285f4; color: #fff; border: none; }