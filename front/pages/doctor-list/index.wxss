/* 医生列表页面 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100px;
  display: flex;
  align-items: center;
  padding: 10px 20px;
  background-color: #cdf7be;
  z-index: 1000;
}

.back-icon {
  width: 40px;
  height: 40px;
  margin-right: 20px;
}

.title {
  font-size: 32px;
  font-weight: 600;
  color: #000;
}

/* 医生列表 */
.doctor-list {
  margin-top: 100px;
  padding: 20px;
}

/* 医生列表项 */
.doctor-item {
  display: flex;
  align-items: center;
  padding: 20px;
  margin-bottom: 15px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* 医生头像 */
.doctor-avatar {
  position: relative;
  width: 80px;
  height: 80px;
  margin-right: 20px;
}

.doctor-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 未读消息徽章 */
.unread-badge {
  position: absolute;
  top: -5px;
  right: -5px;
  min-width: 30px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background-color: #ff4757;
  color: #fff;
  border-radius: 15px;
  font-size: 20px;
  padding: 0 8px;
}

/* 医生信息 */
.doctor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.doctor-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.doctor-name {
  font-size: 28px;
  font-weight: 600;
  color: #000;
}

.message-time {
  font-size: 22px;
  color: #999;
}

.doctor-role {
  font-size: 24px;
  color: #666;
  margin-bottom: 8px;
}

.last-message {
  font-size: 24px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 右箭头 */
.arrow-icon {
  width: 30px;
  height: 30px;
  margin-left: 15px;
}

/* 空状态 */
.empty-state,
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100px 20px;
  font-size: 28px;
  color: #999;
}

